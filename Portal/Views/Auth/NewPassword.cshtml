@{
    ViewBag.Title = "Reset Password";
}

<div class="container">
    <ul class="breadcrumb">
        <li><a href="@Url.Content("~/")">Beranda</a></li>
        <li class="active">Lupa Password?</li>
    </ul>
    <!-- BEGIN SIDEBAR & CONTENT -->
    <div class="row margin-bottom-40">
        <!-- BEGIN SIDEBAR -->
        <div class="sidebar col-md-3 col-sm-3">
            <ul class="list-group margin-bottom-25 sidebar-menu">
                <li class="list-group-item clearfix"><a href="javascript:;" onclick="window.location='@Url.Content("~/auth/login")"><i class="fa fa-angle-right"></i>Login Member</a></li>
                @*<li class="list-group-item clearfix"><a href="javascript:;"><i class="fa fa-angle-right"></i>Restore Password</a></li>
              <li class="list-group-item clearfix"><a href="javascript:;"><i class="fa fa-angle-right"></i>My account</a></li>
              <li class="list-group-item clearfix"><a href="javascript:;"><i class="fa fa-angle-right"></i>Address book</a></li>
              <li class="list-group-item clearfix"><a href="javascript:;"><i class="fa fa-angle-right"></i>Wish list</a></li>
              <li class="list-group-item clearfix"><a href="javascript:;"><i class="fa fa-angle-right"></i>Returns</a></li>
              <li class="list-group-item clearfix"><a href="javascript:;"><i class="fa fa-angle-right"></i>Newsletter</a></li>*@
            </ul>
        </div>
        <!-- END SIDEBAR -->

        <!-- BEGIN CONTENT -->
        <div class="col-md-9 col-sm-9">
            <h1>Forgot Your Password?</h1>
            <div class="content-form-page">
                <div class="row">
                    <div class="alert alert-danger display-hide">
                                    @*<button class="close" data-close="alert"></button>*@
                                    Ada beberapa field kosong yang terlewatkan, silahkan isi field tersebut 
                                </div>
                    <div class="col-md-7 col-sm-7">
                        <form class="form-horizontal form-without-legend" id="frmRegistrasi" role="form" method="post">
                         
                            <div class="form-group">
                                <label for="password" class="col-lg-4 control-label">Password <span class="require">*</span></label>
                                <div class="col-lg-8">
                                    <div class="input-icon right">
                                        <i class="fa"></i>
                                        <input type="hidden" class="form-control" id="id" name="id" value="@ViewBag.id">
                                        <input type="password" class="form-control wajib" id="password" name="USER_PASSWORD" placeholder="Password akun">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="confirm-password" class="col-lg-4 control-label">Konfirm Password <span class="require">*</span></label>
                                <div class="col-lg-8">
                                    <div class="input-icon right">
                                        <i class="fa"></i>
                                        <input type="password" class="form-control wajib" id="confirmPassword" name="USER_PASSWORD_KONFIRM" placeholder="Konfirmasi Password akun">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-5">
                                    <button type="submit" class="btn btn-primary">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-5 col-sm-5 pull-right">
                        <div class="form-info">
                            <h2><i class="fa  fa-bullhorn"></i>&nbsp;&nbsp;<em>Informasi</em> Penting</h2>
                            <p>Masukkan alamat email anda yang sudah anda daftarkan di sistem kami. Maka kami akan mengirimkan link/tautan untuk merubah password. Terimakasih</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END CONTENT -->
    </div>
    <!-- END SIDEBAR & CONTENT -->
</div>
