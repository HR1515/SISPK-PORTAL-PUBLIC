@using Portal.Helpers;
@{
	var poll_us = 0;
	var date = ViewBag.DataProposal.POLLING_FULL_DATE_NAME.ToString().Replace("<br>", " ");
	int no = 1;
	}
	
	@if (Session["USER_ID"] != null)
{  

<style type="text/css">
