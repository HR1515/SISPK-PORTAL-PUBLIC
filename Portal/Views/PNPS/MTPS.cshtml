@using Portal.Helpers;

<div class="container">
    <ul class="breadcrumb">
        <li><a href="javascript:void(0);">PNPS</a></li>
        <li class="active">List Publikasi Usulan PNPS</li>
    </ul>

    <div class="row margin-bottom-40">

        <div class="sidebar col-md-3 col-sm-3">
            <ul class="list-group margin-bottom-25 sidebar-menu">
                @Html.Raw(AuthHelper.buat_menu_seinduk(ViewBag.moduleId))
            </ul>
            <br />
            <br />
            <div class="form-info">
                <h2><i class="fa  fa-bullhorn"></i>&nbsp;&nbsp;<em>Informasi</em> Penting</h2>
                <p>
                    Untuk dapat melakukan Komentar, Silakan <a href="~/Auth/Index">login</a> terlebih dahulu
                </p><p>Terimakasih</p>
            </div>
        </div>

        <div class="col-md-9 col-sm-9">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-table"></i> Daftar list Usulan PNPS
                    </div>
                    <div class="actions">
                       
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="tab-content">
                        <table class="table table-striped table-hover table-bordered" id="list-data">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Judul PNPS</th>
                                    <th>Tanggal Publikasi</th>
                                    <th>Status</th>
                                    <th>Komentar</th>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    jQuery(document).ready(function () {
        var table1 = $('#list-data');
        var oTable = table1.dataTable({
            "processing": true,
            "serverSide": true,
            "bServerSide": true,
            "sAjaxSource": "/PNPS/list_MTPS",
            "language": {
                "aria": {
                    "sortAscending": ": activate to sort column ascending",
                    "sortDescending": ": activate to sort column descending"
                },
                "emptyTable": "Data tidak tersedia",
                "info": "Menampilkan _START_ sampai _END_ dari _TOTAL_ data",
                "infoEmpty": "Menampilkan 0 Data",
                "infoFiltered": "",
                "lengthMenu": "Menampilkan _MENU_ Data",
                "search": "Pencarian:",
                "zeroRecords": "Pencarian Tidak Ditemukan",
                "sProcessing": "Proses Pengambilan Data",
            },
            "fnDrawCallback": function () {
                $('.tooltips').tooltip();
            },
            "aaSorting": [[0, "DESC"]],
            "aoColumns": [
                { "sClass": "text-center", "bSortable": false },
                { "sClass": "text-left" },
                { "sClass": "text-left" },
                { "sClass": "text-left" },
                { "sClass": "text-center" }

            ],
            "order": [
                [0, 'DESC']
            ],
            "lengthMenu": [
                [10, 50, 100],
                [10, 50, 100]
            ],
            "pageLength": 10,
        });
    });
    $("#docreate").click(function () {

    });
</script>



