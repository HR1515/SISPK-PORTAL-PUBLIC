@using Portal.Helpers;
@{
    var Detail = ViewBag.DataPantek;
    var Ics = ViewBag.DataIcs;
    var Anggota = ViewBag.DataAnggota;
    var Komp_Ang = ViewBag.Komp_Ang;
    int no1 = 1;
    int no2 = 1;
    int no3 = 1;
}
<style>
    
    .judul {
        text-align:left !important;
        font-weight:bold;
    }
    .isi {
        padding-top:5px;
        padding-bottom:5px;
    }
    
</style>
<div class="container">
    <ul class="breadcrumb">
        <li><a href="javascript:void(0);">Komite Teknis</a></li>
        <li class="active">Detil Informasi Komite Teknis</li>
    </ul>
    <div class="row margin-bottom-40">
        <div class="sidebar col-md-3 col-sm-3">
            <ul class="list-group margin-bottom-25 sidebar-menu">
                @Html.Raw(AuthHelper.buat_menu_seinduk(ViewBag.moduleId))
            </ul>
            <br />
            <br />           
        </div>
        <div class="col-md-9 col-sm-9">
            <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> Panitia Teknis Detail
                </div>
                <div class="actions">
                    <a class="btn btn-warning " href="/Export/PrintDetailKomtek?Type=pdf&id=@Detail.KOMTEK_ID" target="_blank">
                        <i class="fa fa-print"></i>Print</a>
                </div> 
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal form-bordered ng-pristine ng-valid" id="form-username" action="" method="">
                    <div class="form-body">                        
                      <div class="form-group">
                            <label class="control-label col-md-12 judul" style="padding-bottom:5px">@Detail.KOMTEK_CODE - @Detail.KOMTEK_NAME</label>                           
                      </div>                                
                      <div class="form-group">
                            <label class="control-label col-md-3">Sekretariat</label>
                            <div class="col-md-4">
                                <div style="text-align: left" class="input-group col-md-12">
                                  <label class="isi">@Detail.KOMTEK_SEKRETARIAT</label> 
                                </div>
                            </div>
                        </div>        
                        <div class="form-group">
                            <label class="control-label col-md-3">Alamat Sekretariat</label>
                            <div class="col-md-9">
                                <div class="input-icon right">
                                   <label class="isi">@Detail.KOMTEK_ADDRESS</label> 
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">No Telp</label>
                            <div class="col-md-9">
                                <div class="input-icon right">
                                    <label class="isi">@Detail.KOMTEK_PHONE</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">No Fax</label>
                            <div class="col-md-9">
                                <div class="input-icon right">
                                   <label class="isi">@Detail.KOMTEK_FAX</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Email</label>
                            <div class="col-md-9">
                                <div class="input-icon right">
                                   <label class="isi">@Detail.KOMTEK_EMAIL</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Kontak Person</label>
                            <div class="col-md-9">
                                <div class="input-icon right">
                                   <label class="isi"></label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">SK Penetapan</label>
                            <div class="col-md-9">
                                <div class="input-icon right">
                                   <label class="isi">@Detail.KOMTEK_SK_PENETAPAN</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Status Keaktifan</label>
                            <div class="col-md-9">
                                <div class="input-icon right">
                                   <label class="isi">@((Detail.KOMTEK_STATUS == 0) ? "Tidak Aktif" : "Aktif")</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Keterangan</label>
                            <div class="col-md-9">
                                <div class="input-icon right">
                                   <label class="isi"></label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-12 judul">Lingkup ICS</label>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center;font-weight:bold;font-size:14px">No</th>
                                            <th style="text-align:center;font-weight:bold;font-size:14px">ICS</th>
                                            <th style="text-align:center;font-weight:bold;font-size:14px">Judul (INA)</th>
                                            <th style="text-align:center;font-weight:bold;font-size:14px">Judul (ENG)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var ics in Ics)
                                        { 
                                        <tr>
                                            <td>@no1</td>
                                            <td>@ics.ICS_CODE</td>
                                            <td>@ics.ICS_NAME_IND</td>
                                            <td>@ics.ICS_NAME</td>
                                        </tr>
                                            no1++;
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-12 judul">Anggota PT</label>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center;font-weight:bold;font-size:14px">No</th>
                                            <th style="text-align:center;font-weight:bold;font-size:14px">Jabatan</th>
                                            <th style="text-align:center;font-weight:bold;font-size:14px">Stakeholder</th>
                                            <th style="text-align:center;font-weight:bold;font-size:14px">Nama</th>
                                            <th style="text-align:center;font-weight:bold;font-size:14px">Instansi</th>
                                            <th style="text-align:center;font-weight:bold;font-size:14px">Alamat</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var ang in Anggota)
                                        {
                                        <tr>
                                            <td>@no2</td>
                                            <td>@ang.JABATAN</td>
                                            <td>@ang.STAKEHOLDER</td>
                                            <td>@ang.KOMTEK_ANGGOTA_NAMA</td>
                                            <td>@ang.KOMTEK_ANGGOTA_INSTANSI</td>
                                            <td>@ang.KOMTEK_ANGGOTA_ADDRESS</td>
                                        </tr>
                                            no2++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-12 judul">Komposisi Keanggotaan</label>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-bordered">
                                    <thead>
                                        <tr>
                                            <td colspan="4" style="text-align:center;font-weight:bold;font-size:14px">Komposisi</td>                                           
                                        </tr>
                                        <tr>
                                            <td style="text-align:center;font-weight:bold;font-size:14px">No</td>
                                            <td style="text-align:center;font-weight:bold;font-size:14px">Stakeholder</td>
                                            <td style="text-align:center;font-weight:bold;font-size:14px">Jumlah</td>
                                            <td style="text-align:center;font-weight:bold;font-size:14px">Presentase</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var ang in Komp_Ang)
                                        {
                                        <tr>
                                            <td>@no3</td>
                                            <td>@ang.STAKEHOLDER</td>
                                            <td>@ang.JML</td>
                                            <td>@ang.PERSENTASE %</td>                                            
                                        </tr>
                                            no3++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>                                                                       
                        @*<div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">                                  
                                    <a href="@Url.Action("Index")" class="btn btn-default">Kembali</a>                                    
                                </div>
                            </div>
                        </div>*@
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>
</div>
<style>
    .detailtext {
        text-align :left !important;
    }
</style>
<!-- END CONTENT -->
<script type="text/javascript">
    jQuery(document).ready(function () {
        $("input.tags").tagsInput({
            'defaultText': 'Tambah',
            'width': '100%'
        });
    });
    function set_jalur(ini) {
        var value = $(ini).val();
        if ($(ini).is(":checked")) {
            if (value == 2) {
                $('#PROPOSAL_JALUR_2').val(1);
                $('.adopsi').slideDown();
            }
        } else {
            if (value == 2) {
                $('#PROPOSAL_JALUR_2').val(0);
                $('.adopsi').slideUp();
            }
        }

    }
    function sethakpaten() {
        var value = $('input[name="PROPOSAL_IS_HAK_PATEN"]:checked').val();
        if (value == 1) {
            $('.PROPOSAL_IS_HAK_PATEN_DESC').slideDown();
        } else {
            $('.PROPOSAL_IS_HAK_PATEN_DESC').slideUp();
            $('#PROPOSAL_IS_HAK_PATEN_DESC').val('');
        }

    }

    function cekjenis(ini) {
        var inivalue = parseInt($(ini).val());
        if (inivalue == 2 || inivalue == 3) {
            $('.revisilist').slideDown();
        } else {
            //$('.revisilist').slideUp();
        }
    }
</script>
