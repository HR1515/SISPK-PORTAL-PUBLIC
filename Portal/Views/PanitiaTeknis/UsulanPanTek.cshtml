@using Portal.Helpers;

<div class="container">
    <ul class="breadcrumb">
        <li><a href="javascript:void(0);">Komisi Teknis</a></li>
        <li class="active">Usulan Komite Teknis</li>
    </ul>

    <div class="row margin-bottom-40">

        <div class="sidebar col-md-3 col-sm-3">
            <ul class="list-group margin-bottom-25 sidebar-menu">
                @Html.Raw(AuthHelper.buat_menu_seinduk(ViewBag.moduleId))

            </ul>
            <br />
            <br />
            <div class="form-info">
                <h2><i class="fa  fa-bullhorn"></i>&nbsp;&nbsp;<em>Informasi</em> Penting</h2>
                <p>
                    Untuk mengajukan usulan Komite Teknis, Silakan login terlebih dahulu
                <p>Terimakasih</p>
            </div>
            <br />
            <div class="form-info">
                <h2><i class="fa  fa-bullhorn"></i>&nbsp;&nbsp;<em>Informasi</em> Penting</h2>
                <p>
                    Untuk mengajukan usulan Komite Teknis, Silakan login terlebih dahulu
                <p>Terimakasih</p>
            </div>
        </div>

        <div class="col-md-9 col-sm-9">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-table"></i>Daftar Usulan Komisi Teknis
                    </div>                    

                    <div class="actions">
                        <a href="../Export/PrintUsulanKomtek?Type=pdf" id="" class="btn btn-warning">
                                <i class="fa fa-print"></i>Cetak
                            </a>
                        @if (Session["USER_ID"] != null)
                        { 
                            <a href="/PanitiaTeknis/TambahUsulanPantek" id="docreate" class="btn btn-primary">
                                <i class="fa fa-plus"></i>Ajukan Komite Teknis
                            </a>
                        }
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="tab-content">

                        <table class="table table-striped table-hover table-bordered" id="list-data">
                            <thead>
                                <tr>
                                    <th style="width: 10%;">Kode PT
                                    </th>
                                    <th style="width: 20%;">Nama PT
                                    </th>
                                    <th style="width: 30%;">Sekretariat
                                    </th>
                                    <th style="width: 28%;">Alamat
                                    </th>
                                    <th style="width: 12%;">No. Telp
                                    </th>
                                </tr>
                            </thead>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        var table1 = $('#list-data');
        var oTable = table1.dataTable({
            "processing": true,
            "serverSide": true,
            "bServerSide": true,
            "sAjaxSource": "/PanitiaTeknis/ListUsulanPantek",
            "language": {
                "aria": {
                    "sortAscending": ": activate to sort column ascending",
                    "sortDescending": ": activate to sort column descending"
                },
                "emptyTable": "Data tidak tersedia",
                "info": "Menampilkan _START_ sampai _END_ dari _TOTAL_ data",
                "infoEmpty": "Menampilkan 0 Data",
                "infoFiltered": "",
                "lengthMenu": "Menampilkan _MENU_ Data",
                "search": "Pencarian:",
                "zeroRecords": "Pencarian Tidak Ditemukan",
                "sProcessing": "Proses Pengambilan Data",
            },
            "fnDrawCallback": function () {
                $('.tooltips').tooltip();
            },
            "aaSorting": [[0, "DESC"]],
            "aoColumns": [
				{ "sClass": "text-left", "bVisible": false, },
				{ "sClass": "text-left" },
                { "sClass": "text-left" },				
                { "sClass": "text-left" },
                { "sClass": "text-center" }

            ],
            "order": [
                [0, 'asc']
            ],
            "lengthMenu": [
                [10, 50, 100],
                [10, 50, 100]
            ],
            "pageLength": 10,
        });
    });
    $("#docreate").click(function () {

    });
</script>



